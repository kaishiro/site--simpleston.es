<!doctype html>
<!--[if lt IE 7]><html class="no-js ie6 oldie" lang="en"><![endif]-->
<!--[if IE 7]><html class="no-js ie7 oldie" lang="en"><![endif]-->
<!--[if IE 8]><html class="no-js ie8 oldie" lang="en"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>

  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>{% if template == "404" %}Page not found{% elsif template == 'index' %}{{ shop.name }} - {{ page_title }}{% else %}{{ page_title }} - {{ shop.name }}{% endif %}</title>

  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <link rel="canonical" href="{{ canonical_url }}" /> 

  {% include 'fb-open-graph-tags' %}

  {{ 'styles.css' | asset_url | stylesheet_tag }}
  
  {{ 'html5shiv.js' | asset_url | script_tag }}

  {{ content_for_header }}
  
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js' | script_tag }}
  
  {{ 'scripts.js' | asset_url | script_tag }}
  
  <link href='http://fonts.googleapis.com/css?family=Bilbo+Swash+Caps' rel='stylesheet' type='text/css'>
  
</head>

<body>
  
  <!-- Container: Header -->
  <header class="header-container">
    
    <!-- Block: Logo -->
    <div class="logo">
      <h1 class="logo__header">
        <a class="logo__link" href="/">
          simple<span class="purple">stones</span>
        </a>
      </h1>
    </div>
    <!-- Block: Logo -->

    <!-- Block: Nav (Primary) -->
    <nav class="nav nav--primary">
      <ul class="nav__list">
        {% for link in linklists.primary.links %}
          {{ link.title | link_to: link.url }} 
          {% if forloop.rindex != 1 %} | {% endif %}
        {% endfor %}
      </ul>
    </nav>
    <!-- Block: Nav (Primary) -->

    <!-- Block: Nav (Utility) -->
    <nav class="nav nav--utility">
      <ul class="nav__list">
        <li class="nav__item nav__item--cart">
          <a class="nav__link" href="/cart" title="Shopping Cart">
            <span class="nav__icon"></span>
            <span class="nav__copy">{{ cart.item_count }}</span>
          </a>    
        </li>
        {% if cart.item_count != 0 %}
        <li class="nav__item nav__item--checkout">
          <a class="nav__link" href="/cart" title="Checkout">
            <span class="nav__icon"></span>
            <span class="nav__copy">Checkout</span>
          </a>    
        </li>
        {% endif %}
      </ul>
    </nav>
    <!-- Block: Nav (Utility) -->

  </header>
  <!-- Container: Header -->

  <!-- Container: Body -->
  <section class="body-container">
    {{ content_for_layout }} 
  </section>
  <!-- Container: Body -->
  
  <!-- Container: Footer -->
  <footer class="footer-container">

    <!-- Block: Footer -->
    <div class="footer">
        
      <!-- Block: Copyright -->
      <div class="copyright">
        <p class="copyright__copy">
          Copyright &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}
        </p>
      </div>
      <!-- Block: Copyright -->

    </div>
    <!-- Block: Footer -->
    
  </footer>
  <!-- Container: Footer -->
 
  {{ 'jquery.fancybox.js' | asset_url | script_tag }}
  
</body>
</html>
